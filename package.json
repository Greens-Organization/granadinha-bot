{
  "name": "granadinha-bot",
  "module": "index.ts",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch ./src/bot.ts",
    "dev-debug": "bun --inspect ./src/bot.ts",
    "build": "bun ./build.ts",
    "start": "bun dist/src/bot.js",
    "check:types": "bun x tsc --noEmit",
    "lint": "biome lint ./src",
    "lint:fix": "biome check --write ./src/**/*",
    "test": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bunx --bun drizzle-kit migrate",
    "db:up": "bun run db:generate && bun run db:migrate",
    "db:studio": "drizzle-kit studio",
    "file:test": "bun run ./src/infra/libs/web-scraping/overwatch/scrapping-heroes-list.ts",
    "redis:up": "docker compose -f docker-compose.dev.yml up -d redis",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/bun": "latest",
    "drizzle-kit": "0.31.4",
    "git-commit-msg-linter": "5.0.8",
    "husky": "9.1.6"
  },
  "dependencies": {
    "@libsql/client": "0.14.0",
    "cheerio": "1.0.0",
    "discord.js": "14.16.3",
    "dotenv": "16.4.5",
    "drizzle-orm": "0.44.3",
    "ioredis": "5.4.1",
    "reflect-metadata": "0.2.2",
    "zod": "4.0.5"
  }
}
