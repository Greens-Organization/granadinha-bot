{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  },
  "overrides": [
    {
      "includes": ["**", "!**/node_modules", "!**/dist"]
    }
  ],
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "recommended": true
      },
      "complexity": {
        "noVoid": "warn",
        "noStaticOnlyClass": "off"
      },
      "suspicious": {
        "noEmptyInterface": "off",
        "noExplicitAny": "off",
        "useAwait": "off",
        "noImplicitAnyLet": "off",
        "noUnsafeDeclarationMerging": {
          "level": "off"
        }
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "off"
      },
      "style": {
        "noNamespace": "off",
        "noNonNullAssertion": {
          "fix": "safe",
          "level": "info"
        },
        "noParameterAssign": "off",
        "noInferrableTypes": "warn",
        "noNegationElse": "error",
        "useConsistentMemberAccessibility": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf",
    "includes": ["**"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "trailingCommas": "none",
      "bracketSpacing": true,
      "quoteStyle": "single"
    }
  }
}
